<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="@color/roundedBottomSheetPrimaryBackground"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.google.android.material.button.MaterialButton
        android:layout_width="40dp"
        android:layout_height="16dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:backgroundTint="#272727"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Continue With Google"
        android:backgroundTint="#fff"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_google_login"
        app:iconTintMode="multiply"
        app:iconSize="28dp"
        android:fontFamily="@font/nunito_bold"
        android:id="@+id/google"
        android:textAllCaps="false"
        android:layout_marginTop="4dp"
        android:letterSpacing="0.000262665"
        android:textSize="18sp"
        app:iconTint="@color/white"
        android:textColor="@color/black"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="11dp"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Continue With Twitter"
        android:backgroundTint="#1DA1F2"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_share_twitter"

        app:iconSize="24dp"
        android:fontFamily="@font/nunito_bold"
        android:id="@+id/twitter"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.000262665"
        android:textSize="18sp"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="11dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view6"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"

            android:text="or"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/themetextcolor"
            android:textSize="15sp"
           />




        <View
            android:id="@+id/view5"
            android:layout_width="30dp"
            android:layout_marginStart="16dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@color/divider_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Continue With Phone"
        android:backgroundTint="#000"
        app:cornerRadius="24dp"
        app:iconSize="24dp"
        android:fontFamily="@font/nunito_bold"
        android:id="@+id/phone"
        app:strokeColor="@color/divider_color"
        app:strokeWidth="1dp"
        android:textAllCaps="false"
        android:letterSpacing="0.000262665"
        android:textSize="18sp"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="11dp"/>

</LinearLayout>