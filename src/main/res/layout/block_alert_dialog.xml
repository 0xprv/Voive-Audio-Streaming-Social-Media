<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/alert_box_background"
    android:stateListAnimator="@null">

    <TextView
        android:id="@+id/deactivate_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montr"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/deactivate_account"
        android:textAlignment="center"
        android:textColor="@color/themetextcolor"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/deactivate_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/are_you_sure_to_deactivate"
        android:textAlignment="center"
        android:textColor="@color/themetextsecondarycolor"
        android:textSize="18sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="16dp"
        android:background="@color/divider_color"/>



    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deactivate"
        android:fontFamily="@font/montr"
        android:textAllCaps="false"
        android:letterSpacing="0.0002626"
        android:textSize="20sp"
        android:paddingTop="12dp"
        android:textColor="@color/colorAccent"
        app:cornerRadius="8dp"
        android:id="@+id/deactivate"
        app:rippleColor="@android:color/transparent"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:paddingBottom="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/divider_color"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/no"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montr"
        android:letterSpacing="0.0002626"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/NO"
        android:textAllCaps="false"
        android:textColor="@color/themetextcolor"
        android:textSize="18sp"
        android:visibility="invisible"
        app:cornerRadius="8dp"
        app:rippleColor="@android:color/transparent" />
</LinearLayout>