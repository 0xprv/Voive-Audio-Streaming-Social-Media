<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingEnd="8dp"
    android:background="@color/roundedBottomSheetPrimaryBackground"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/block_user"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/montr_bold"
            android:letterSpacing="0.0000211515"

            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Block"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#EC615D"
            android:textSize="22sp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            app:icon="@drawable/more_than"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            app:iconSize="24dp"
            app:iconTint="#EC615D"
            app:rippleColor="@android:color/transparent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/report_user"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/nunito_bold"
            android:letterSpacing="0.04"

            android:paddingStart="24dp"
            android:text="Report"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#EC615D"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#1B1A1A"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/creator_of"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/nunito_bold"
            android:letterSpacing="0.04"
            android:paddingStart="24dp"
            android:text="@string/Moderator_of"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/themetextcolor"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#1B1A1A"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/selectableItemBackground"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mutual"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/nunito_bold"
            android:letterSpacing="0.04"
            android:paddingStart="24dp"
            android:text="Mutual Tables"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/themetextcolor"
            android:textSize="20sp" />



    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_account"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/searchboxbackcolor"
        android:elevation="0dp"
        android:fontFamily="@font/montr_bold"
        android:letterSpacing="0.0002552"
        android:paddingStart="18dp"
        android:layout_marginBottom="16dp"
        app:iconTint="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:iconPadding="16dp"
        android:paddingEnd="18dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:text="@string/Done"
        android:textAllCaps="false"
        android:textColor="@color/themetextcolor"
        android:textSize="17sp"
        app:cornerRadius="24dp"
        app:elevation="0dp" />

</LinearLayout>