            android:layout_height="40dp"
            android:background="@drawable/textboxbackstyle"
            android:fontFamily="@font/montr_semi"
            android:hint="@string/starting_time"
            android:paddingStart="16dp"
            android:textSize="18sp"
            android:paddingTop="0dp"
            android:paddingBottom="2dp"
            android:letterSpacing="0.0002626"
            android:textColor="@color/themetextcolor"
            android:textColorHint="@color/hintcolor"
            app:hintTextColor="@color/textboxbacktextcolor"
            app:layout_constraintEnd_toStartOf="@+id/lastname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:letterSpacing="0.0002626"
            android:textSize="18sp"
            android:id="@+id/lastname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingTop="0dp"
            android:paddingBottom="2dp"
            android:background="@drawable/textboxbackstyle"
            android:fontFamily="@font/montr_semi"
            android:hint="@string/ending_time"
            android:paddingStart="16dp"
            android:textColor="@color/themetextcolor"
            android:textColorHint="@color/hintcolor"
            app:hintTextColor="@color/textboxbacktextcolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/firstname"
            app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>
