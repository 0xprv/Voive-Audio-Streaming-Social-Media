              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/invitation_table_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montr_bold"
                android:text="@string/invitation_to_join"
                android:textColor="@color/themetextcolor"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:id="@+id/initation_des_textview"
                android:fontFamily="@font/montr_semi"
                android:text="@string/people_must_have_invitation"
                android:textColor="@color/themetextsecondarycolor"
                android:textSize="15sp" />


          </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
          <com.bitvale.switcher.SwitcherX
