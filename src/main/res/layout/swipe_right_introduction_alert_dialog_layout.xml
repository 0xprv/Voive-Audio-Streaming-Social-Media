<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    android:background="@drawable/alert_box_background"
    android:stateListAnimator="@null">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_rawRes="@raw/swipe_left"
        app:lottie_autoPlay="true" />


    <TextView
        android:id="@+id/deactivate_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montr_bold"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/Get_shorter_side"
        android:textAlignment="center"
        android:textColor="@color/themetextcolor"
        android:textSize="16sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/deactivate"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/montr_extrabold"
        android:letterSpacing="0.0002626"
        android:paddingStart="32dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:paddingBottom="10dp"
        android:text="Let's Listen"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:cornerRadius="24dp"
        app:rippleColor="@android:color/transparent" />

</LinearLayout>