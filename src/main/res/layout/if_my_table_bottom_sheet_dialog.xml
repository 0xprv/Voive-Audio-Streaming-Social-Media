<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_rounded_bottom_sheet"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/pause_notification"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:letterSpacing="0.04"
            android:paddingStart="20dp"
            android:text="@string/Notification"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/themetextcolor"
            android:textSize="20sp"
            app:iconPadding="16dp"
            app:iconSize="28dp"
            app:iconTint="@color/allicontintcolor"
            app:rippleColor="@color/transparent" />

        <com.bitvale.switcher.SwitcherX
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:checked="false"

            android:elevation="0dp"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:switcher_icon_color="@color/card_view_color"
            app:switcher_off_color="@color/searchboxbackcolor"
            app:switcher_on_color="@color/white" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#1B1A1A"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/INVITE_RELATIVE"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/invite_people"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:letterSpacing="0.04"
            android:paddingStart="22dp"
            android:text="@string/invite_peoples"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/themetextcolor"
            android:textSize="20sp"

            app:iconPadding="19dp"
            app:iconSize="22dp"
            app:iconTint="@color/allicontintcolor"
            app:rippleColor="@color/transparent" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#1B1A1A"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setting"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:letterSpacing="0.04"
            android:paddingStart="20dp"
            android:text="@string/Setting"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/themetextcolor"
            android:textSize="20sp"
            app:iconPadding="16dp"
            app:iconSize="28dp"
            app:iconTint="@color/allicontintcolor" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#1B1A1A"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingTop="8dp"

        android:layout_height="60dp">


        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="22dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/max_people_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montr_bold"
                android:text="ðŸ”Š"
                android:textColor="@color/themetextcolor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/how_integer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="100"
                android:textColor="@color/themetextcolor"
                android:textSize="16sp" />

        </LinearLayout>


        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/seekbar"
            android:max="100"
            android:min="0"
            android:layout_marginEnd="16dp"
            android:thumbTint="@color/themetextcolor"
            android:progress="50"
            android:progressBackgroundTint="@color/card_view_color"
            android:secondaryProgressTint="@color/card_view_color"
            android:layout_marginStart="10dp"
            android:progressTint="@color/themetextsecondarycolor"
            android:backgroundTint="@color/card_view_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#1B1A1A"/>



    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dismiss_table"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="#F84A5A"
        android:fontFamily="@font/nunito_bold"
        android:letterSpacing="0.04"
        android:textSize="20sp"
        android:id="@+id/dismiss_table"

        app:iconSize="22dp"
        app:iconTint="#F84A5A"
        android:paddingStart="24dp"
        android:textAlignment="textStart"
        app:iconPadding="20dp"
        android:textAllCaps="false"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_account"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/searchboxbackcolor"
        android:elevation="0dp"
        android:fontFamily="@font/montr_bold"
        android:letterSpacing="0.0002552"
        android:paddingStart="18dp"
        android:layout_marginBottom="16dp"
        app:iconTint="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:iconPadding="16dp"
        android:paddingEnd="18dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:text="@string/Done"
        android:textAllCaps="false"
        android:textColor="@color/themetextcolor"
        android:textSize="17sp"
        app:cornerRadius="24dp"
        app:elevation="0dp" />
</LinearLayout>