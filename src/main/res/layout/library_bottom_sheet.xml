<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/roundedBottomSheetPrimaryBackground"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mine_tables"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montr_bold"
                android:letterSpacing="0.000026626"
                android:paddingStart="16dp"
                android:paddingTop="-8dp"
                android:text="@string/my_tables"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/themetextcolor"
                android:textSize="22sp"
                app:cornerRadius="0dp"
                app:iconPadding="16dp"
                app:iconSize="26dp"
                app:iconTint="@color/themetextsecondarycolor"
                app:rippleColor="@color/transparent" />


            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/card_view_color"
                android:paddingTop="4dp"
                android:paddingStart="12dp"
                app:cornerRadius="100dp"
                app:icon="@drawable/more_than"
                app:iconSize="21dp"
                app:iconTint="@color/themetextsecondarycolor"
                app:rippleColor="@android:color/transparent" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/subscriptions"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montr_bold"
                android:letterSpacing="0.000026626"
                android:paddingStart="16dp"
                android:paddingTop="-8dp"
                android:text="@string/subscriptions"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/themetextcolor"
                android:textSize="22sp"
                app:cornerRadius="0dp"
                app:iconPadding="16dp"
                app:iconSize="24dp"
                app:iconTint="@color/themetextsecondarycolor"
                app:rippleColor="@color/transparent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/themetextcolor"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="40dp"
                    android:layout_height="52dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="4dp"
                    android:paddingStart="12dp"
                    app:iconSize="21dp"
                    app:cornerRadius="100dp"
                    android:backgroundTint="@color/card_view_color"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:icon="@drawable/more_than"
                    app:rippleColor="@android:color/transparent"
                    app:iconTint="@color/themetextsecondarycolor"/>
            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/my_invitation"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@color/searchboxbackcolor"
                android:fontFamily="@font/montr_bold"
                android:letterSpacing="0.000026626"
                android:paddingStart="16dp"
                android:paddingTop="-8dp"
                android:text="@string/Invitation"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/themetextcolor"
                android:textSize="22sp"
                app:cornerRadius="0dp"
                app:iconPadding="16dp"
                app:iconSize="30dp"
                app:iconTint="@color/themetextsecondarycolor"
                app:rippleColor="@color/transparent" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/card_view_color"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                app:cornerRadius="100dp"
                app:icon="@drawable/more_than"
                app:iconSize="21dp"
                app:iconTint="@color/themetextsecondarycolor"
                app:rippleColor="@android:color/transparent" />

            <ImageView
                android:id="@+id/imageView809"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginEnd="60dp"
                android:src="@drawable/red_color_cirular_backround" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nearby_table"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@color/searchboxbackcolor"
                android:fontFamily="@font/montr_bold"
                android:letterSpacing="0.000026626"
                android:paddingStart="16dp"
                android:paddingTop="-8dp"
                android:text="@string/nearby_conv"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/themetextcolor"
                android:textSize="22sp"
                app:cornerRadius="0dp"
                app:iconPadding="16dp"
                app:iconSize="30dp"
                app:iconTint="@color/themetextsecondarycolor"
                app:rippleColor="@color/transparent" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:paddingTop="4dp"
                android:paddingStart="12dp"
                app:cornerRadius="100dp"
                app:icon="@drawable/more_than"
                app:iconSize="21dp"
                android:backgroundTint="@color/card_view_color"
                app:iconTint="@color/themetextsecondarycolor"
                app:rippleColor="@android:color/transparent" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>